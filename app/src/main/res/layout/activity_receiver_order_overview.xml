<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/infolabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receive Order"
        android:textSize="14pt" />

    <TextView
        android:id="@+id/article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="60dp"
        android:text="Article:" />


    <TextView
        android:id="@+id/article_input"
        android:layout_width="213dp"
        android:layout_height="35dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="90dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/expected_amount"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="110dp"
        android:text="Expected amount:" />

    <TextView
        android:id="@+id/expected_amount_value"
        android:layout_width="213dp"
        android:layout_height="35dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="110dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/actual_amount"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="160dp"
        android:text="Actual amount:" />

    <EditText
        android:id="@+id/actual_amount_input"
        android:layout_width="213dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="160dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/post_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="310dp"
        android:text="Receive" />

    <TextView
    android:id="@+id/errorMessageLine"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />


</RelativeLayout>